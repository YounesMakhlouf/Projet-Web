{# templates/admin/index.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_header_wrapper %}
{% endblock  content_header_wrapper %}

{# remove search and replace it with title in the dashboard #}
 {% block content_top_header %}
     <div class="content-search">
         {% if not has_search %}
             <h1>Admin Space</h1>
         {% endif %}
     </div>
     {{ parent() }}
 {% endblock %}

    {% block body_attr %}
        style="
        background-color: #f2f2f2;
        "{% endblock %}

    {% block header %}
        <a class="navbar-brand" href="{{ path('app_browse_stories') }}">
            <img src="{{ asset('build/images/logo.webp') }}" alt="Logo" width="40" height="40"
                 class="d-inline-block align-text-top"/> StoryVerse
        </a>
    {% endblock %}

{% block main %}
    {{ parent() }}
    <div class="row">
        {# Users card #}
        {% include '/admin/card.html.twig' with {
            'icon': 'fa-users',
            'category': 'Members',
            'title': users
        } %}

        {# Stories Card #}
        {% include '/admin/card.html.twig' with {
            'icon': 'fa-book-open',
            'category': 'Stories',
            'title': story
        } %}

        {# Interactions card #}
        {% include '/admin/card.html.twig' with {
            'icon': 'fa-heart',
            'category': 'Interactions',
            'title': interaction
        } %}

        {# Challenges card #}
        {% include '/admin/card.html.twig' with {
            'icon': 'fa-trophy',
            'category': 'Challenges',
            'title': '450'
        } %}
    </div>

    {# Statistics section #}
    <div class="row">
        <h1>Statistics</h1>
        <hr/>

        {# Story genre Statistics #}
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Story Genre</h5>
                </div>
                <div class="card-body">
                    <canvas id="genre_chart" width="400" height="100"></canvas>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>


        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Gender Statistics</h5>
                </div>
                <div class="card-body">
                    <canvas id="gender_chart" width="400" height="100"></canvas>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>


        {#        Gender statistics #}

        <div class="col-md-4">
            <div class="card ">
                <div class="card-header ">
                    <h5 class="card-title">Gender Statistics</h5>
                </div>
                <div class="card-body ">
                    <canvas id="gender_chart" style="max-width: 200px;max-height: 200px"></canvas>
                </div>
                <div class="card-footer ">

                </div>
            </div>
        </div>
        {#        language statistics #}

        <div class="col-md-8">
            <div class="card card-chart">
                <div class="card-header">
                    <h5 class="card-title">Story Language Analysis</h5>
                </div>
                <div class="card-body">
                    <canvas id="language_chart" style="max-width: 400px;max-height: 200px"></canvas>
                </div>
                <div class="card-footer">

                </div>
            </div>
        </div>
    </div>
{% endblock %}