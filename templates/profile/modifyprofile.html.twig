{% extends 'base.html.twig' %}

{% block title %}
    Modify Profile
{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Modify Profile</h1>
                    </div>

                    <div class="card-body">
                        {% if errors is not empty %}
                            <div class="alert alert-danger">
                                {% for error in errors %}
                                    {{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.username, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.bio, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.avatar, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
