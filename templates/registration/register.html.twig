{% form_theme registrationForm _self %}

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    <body class="gradient">
    <div class="container">
     {% if app.user %}
        <div class="alert alert-success">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {% else %}
        <div class="title">
            <img src="{{ asset('build/images/logo.webp') }}" class="img-fluid" alt="Example Image">
            Story Verse Registration Form
        </div>
        <div class="content">
            <div class="user-details">
                {{ form_start(registrationForm) }}



                 {{ form_row(registrationForm.first_name,{
                label:'First Name',
                attr:{'placeholder':"Enter your first name",'autocomplete':"off"},
                label_attr: {'class': 'details'},
                row_attr: { class: 'input-box' }
                }) }}
                {{ form_row(registrationForm.last_name,{
                label:'Last Name',
                attr:{'placeholder':"Enter your last name",'autocomplete':"off"},

                    label_attr: {'class': 'details'},

                    row_attr: { class: 'input-box' }}) }}
                 <div class="input-box">
     {{ form_label(registrationForm.username) }}
    {{ form_widget(registrationForm.username,{attr:{'placeholder':"Enter your username",'autocomplete':"off"}}) }}

    </div>
                 <div class="input-box">
     {{ form_label(registrationForm.email) }}
    {{ form_widget(registrationForm.email,{attr:{'placeholder':"Enter your email",'autocomplete':"off"}}) }}

    </div>


               
                <div class="input-box">
     {{ form_label(registrationForm.plainPassword, 'Password') }}
    {{ form_widget(registrationForm.plainPassword,{attr:{'placeholder':"Enter your password",'autocomplete':"off"}}) }}

    </div>





            </div>
            <div class="gender_details">

 {{ form_row(registrationForm.gender ,{
 label_attr:{class:"gender"}
 })}}
 </div>
         {% if form_errors(registrationForm.username)|length > 0 or form_errors(registrationForm.plainPassword)|length > 0 or form_errors(registrationForm.email)|length > 0  %}
    <div class="alert alert-danger">
        {{ form_errors(registrationForm.plainPassword) }}
        {{ form_errors(registrationForm.email) }}
        {{ form_errors(registrationForm.username) }}
    </div>
{% endif %}

    



            <div class="button">
                <input type="submit" value="Register">
            </div>
            {{ form_end(registrationForm) }}
        </div>
        <footer>Already have an account ?
             <a href="{{ path('app_login') }}">Login here</a>
        </footer>

    </div>
    </body>
    {% endif %}
{% endblock %}





 {% block javascripts %}
     {{ parent() }}
     {{ encore_entry_script_tags('login') }}
 {% endblock %}


 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('login') }}
 {% endblock %}
  {% block footer %}
{% endblock %}
{% block header %}
{% endblock %}