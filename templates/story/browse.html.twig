{% extends 'base.html.twig' %}

{% block body %}
    <!-- ======= Trending Section ======= -->
    <section class="trending" id="trending">
        <div class="container">
            <header class="section-title" data-aos="fade-up">
                <h2>Trending Stories</h2>
                <p>Discover Our Hottest Stories üî•üî•</p>
            </header>
            <div class="btn-group" role="group" aria-label="Story Genre filter">

                <a class="btn btn-outline-primary genre" href="{{ path('app_browse_stories') }}">All genres</a>
{% for genre, description in genres %}
                        <a class="btn btn-outline-primary genre"
                           href="{{ path('app_browse_stories', { 'genre': genre }) }}">{{ genre }}</a>
                {% endfor %}

            </div>
            <div>
                <h3 id="genre-description">Browse {{ genre ?? 'All genres' }}</h3>
                {% if genre %}
                    <p>{{ genres[genre] }}</p>
                {% endif %}
            </div>
            <div class="container">

                <article class="row row-cols-1 row-cols-md-3 g-4" data-aos="fade-left">
                    {% for story in pager %}
                        <div class="col">
                            <a href="{{ path('app_storypage', { 'id': story.id }) }}" rel="bookmark">
                                <div class="card h-100" data-aos="zoom-in" data-aos-delay="0">
                                    <img alt="{{ story.title }}" class="card-img-top"
                                         src="{{ asset ('uploads/story_directory/'~ story.storyImage) }}">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ story.title }}</h5>
                                        <p class="card-text">{# awel joumal #}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">{{ story.updatedAt | ago }}</small>
                                            <small class="text-muted">{{ story.likes | length }} ‚ù§Ô∏è</small>
                                        </div>
                                        <span class="badge rounded-pill {{ story.genre }}"> {{ story.genre }} </span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                    {% if pager.haveToPaginate %}
                        {{ pagerfanta(pager) }}
                    {% endif %}
                </article>
            </div>
        </div>
    </section>
    <!-- End Trending Section -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('feed') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('feed') }}
{% endblock %}
