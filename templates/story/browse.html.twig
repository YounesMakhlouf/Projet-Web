{% extends 'base.html.twig' %}

{% block body %}
      <!-- ======= Trending Section ======= -->
        <section class="trending" id="trending">
            <div class="container">
                <header class="section-title" data-aos="fade-up">
                    <h2>Trending Stories</h2>
                    <p>Discover Our Hottest Stories üî•üî•</p>
                </header>
                <article class="row row-cols-1 row-cols-md-3 g-4" data-aos="fade-left">
                    {% for story in trendingStories %}
                        <div class="col">
                            <a href=" {{ path('app_story_id', {id:story.id}) }}" rel="bookmark">
                                <div class="card h-100" data-aos="zoom-in" data-aos-delay="400">
                                    <img alt="{{ story.description }}" class="card-img-top"
                                         src="{{ story.ImageUrl(300) }}">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ story.title }}</h5>
                                        <p class="card-text">{{ story.description }}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">{{ story.lastModifiedAt | ago }}</small>
                                            <small class="text-muted">{{ story.likes }} ‚ù§Ô∏è</small>
                                            <span class="badge rounded-pill">{# story.category #}</span>
                                        </div>

                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </article>
            </div>
        </section>
        <!-- End Trending Section -->
{% endblock %}
