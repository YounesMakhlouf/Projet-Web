{% extends 'base.html.twig' %}

{% block body %}
    <!-- ======= Trending Section ======= -->
    <section class="trending" id="trending">
        <div class="container">
            <header class="section-title" data-aos="fade-up">
                <h2>Trending Stories</h2>
                <p>Discover Our Hottest Stories üî•üî•</p>
            </header>


            <article class="row row-cols-1 row-cols-md-3 g-4" data-aos="fade-left">
                {% for story in pager %}
                    <div class="col">
                        <a href=" {{ path('app_story_id', {slug:story.slug}) }}" rel="bookmark">
                            <div class="card h-100" data-aos="zoom-in" data-aos-delay="400">
                                <img alt="{{ story.title }}" class="card-img-top" src="{{ story.ImageUrl(300) }}">
                                <div class="card-body">
                                    <h5 class="card-title">{{ story.title }}</h5>
                                    <p class="card-text">{# awel joumal #}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">{{ story.updatedAt | ago }}</small>
                                        <small class="text-muted">{{ story.likes }} ‚ù§Ô∏è</small>
                                    </div>
                                        <span class="badge rounded-pill text-bg-primary">{{ story.genre }}</span>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
                {{ pagerfanta(pager) }}
            </article>
        </div>
    </section>
    <!-- End Trending Section -->
{% endblock %}
